<div class="navbar-wagon <%= "navbar-home" if params[:action] == "home" %>">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "homefull.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

            <a href="" class="navbar-wagon-item navbar-wagon-link">Help someone</a>

            <a href="" class="navbar-wagon-item navbar-wagon-link">How it works</a>

     <%= form_tag recipients_path, :method => 'get' do %>
          <%= text_field_tag :search, params[:search], :class => "search-input", label: false, id:"search-form", placeholder: "search term"%>
          <%= text_field_tag :location, params[:location], :class => "search-input", label: false, id:"search-form", placeholder: "Location" %>
          <%= submit_tag 'Search', class: "hidden", :name => nil %>
      <% end %>


      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to recipients_path do %>
                <i class="fa fa-heart"></i> People we help
              <% end %>
            </li>
            <li>
              <%= link_to new_recipient_path do %>
                <i class="fa fa-user"></i> Add someone in need
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
            <a href="/recipients" class="navbar-wagon-item navbar-wagon-link">Help someone</a>
            <a href="/about" class="navbar-wagon-item navbar-wagon-link">How it works</a>

      <%= link_to "Login", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Sign up", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
         <li>
              <%= link_to recipients_path do %>
                <i class="fa fa-heart"></i> People we help
              <% end %>
            </li>
         <li>
              <%= link_to new_recipient_path do %>
                <i class="fa fa-user"></i> Add someone in need
              <% end %>
            </li>
        <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
      </ul>
    </div>
  </div>
</div>
