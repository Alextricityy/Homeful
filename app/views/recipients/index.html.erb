<div class="container" id="map-container">
  <div class="row">
    <div class="col-xs-12">
      <div class="map-homeful">
        <div id="map" class="map-index" data-markers="<%= @markers.to_json %>"
        ></div>
      </div>
    </div>
  </div>
  <div class = "row">
    <div class="col-xs-12 cards">
      <% @recipients.each do |recipient|%>
      <%=link_to recipient do%>
      <div class="col-xs-12 col-sm-3">
        <div class = "card">
         <div class="card-photo" style="background-image: url('<%= recipient.photo %>');">
         </div>
         <div class="card-name">
          <%=recipient.first_name %>
        </div>
        <div class="card-info">
           <%=recipient.bio %>
        </div>
      </div>
    </div>
    <%end%>
    <%end%>
  </div>
</div>
</div>
