<div class="small-banner" style="background-image :linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path "banner.jpg" %>);">
</div>
<h1><%= @recipient.first_name %></h1>
<%= cl_image_tag @recipient.photo, height: 300, width: 400, crop: :fill %>
<p><%= @recipient.bio %></p>
<% @recipient.items.each do |item| %>
<div class="item-card">
  <h1><%= item.title %></h1>
  <h3><%= item.category %></h3>
  <p><%= item.description %></p>
  <p><%= item.total_contributions %></p>
  <p><%= item.cost %></p>
</div>
