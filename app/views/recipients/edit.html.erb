<div class="container">
  <div class="col-xs-6 col-xs-offset-3">
    <h2> Edit Profile </h2>
<%= simple_form_for @recipient do |f| %>

<%= f.input :first_name %>
<%= f.input :last_name %>
<%= f.input :bio, hint: ("100 characters minimum"), input_html: {minlength:100} %>
<%= f.input :date_of_birth %>
<%= f.input :phone_number %>
<%= f.input :photo %>
<%= f.input :photo_cache, as: :hidden %>
<%= f.input :gender, collection: ["Female", "Male", "Other"] %>
<%= f.submit %>
<% end %>
</div>

</div>
