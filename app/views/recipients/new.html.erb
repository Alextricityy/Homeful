<div class="container">
<%= simple_form_for @recipient do |f| %>
<div class="col-xs-6 col-xs-offset-2">
<%= f.input :first_name %>
<%= f.input :last_name %>
<%= f.input :bio %>
<%= f.input :dob %>
<%= f.input :phone_number %>
<%= f.input :photo %>
<%= f.input :photo_cache, as: :hidden %>
<%= f.input :gender, collection: ["Female", "Male"] %>
<%= f.fields_for @location do |fields| %>
   <%= fields.input :address %>
  <% end %>
<%= f.submit %>
<% end %>
</div>

</div>
