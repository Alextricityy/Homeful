<div class="container">
  <div class="col-xs-6 col-xs-offset-3">
<%= simple_form_for [@recipient, @item] do |f| %>
<%= f.input :title %>
<%= f.input :description %>
<%= f.input :category, collection: ["Living", "Food", "Health", "Animal", "Education", "Transport", "Leisure"]%>
<%= f.input :price_cents, label: "Price in Pounds" %>
<%= f.submit %>
</div>

<% end %>
</div>
