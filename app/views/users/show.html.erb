<div class="container-show">
  <div class="wrapper">
    <div class="container">

         <div class="profile-avatar">
            <% if @user.photo %>
              <%= cl_image_tag @user.photo%>
            <% else %>
              <%= image_tag 'logo.jpg' %>
            <% end %>
          </div>

            <div class="avatar-text"> <%= @user.first_name.capitalize%> <%=@user.last_name[0].upcase%>.  </div>
            <div class="text-box">
              <p>Date Of Birth: <%= @user.date_of_birth %></p>
              <p>Email: <%= @user.email %></p>
              <p>Bio: <%= @user.bio%></p>
      </div>
    </div>

    <div class="profile-items">
      <%= link_to 'edit profile', edit_user_registration_path %>
      <%= link_to 'logout', destroy_user_session_path %>
      <%= link_to 'delete profile', user_registration_path, method: :delete%>

    </div>
  </div>
</div>


  <h3> <%= @user.first_name.capitalize %> is responsible for the following recipients:</h3>

  <div class="container-index">
    <div class="row">
      <% if @user.recipients.count > 0 %>
        <% @user.recipients.each do |recipient| %>
          <div class="col-xs-12 col-sm-4">
            <div class="card">
              <%= link_to recipient, class: "card-link" do%>
                <% if recipient.photo %>
                  <% photo_url = cl_image_path recipient.photo %>
                <% else %>
                  <% photo_url = "url('https://goo.gl/images/GPguPA')" %>
                <% end %>
                <div class="card-photo" style="background-image: url('<%= photo_url %>');"></div>
                <div class="card-name">
                  <h3><%= recipient.first_name.capitalize %></h3>
                </div>
                <div class="card-info">
                  <p><%=h truncate(recipient.bio, length: 200) %></p>
                </div>
                <div class="card-date">
                  <p>Added on: <%= Date.today %></p>
                </div>
              </div>
            </div>
            <% end %>
          <% end %>
      <% else %>
        <p>No recipients are currently assigned to <%= @user.first_name.capitalize %></p>
      <%end%>
    </div>
  </div>

