<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <div class = "row text-center">
      <h2>Thank you for your donation </h2>
      <br>
    </div>
    <div class = "row text-center">
      <p>Your <%= humanized_money_with_symbol(@contribution.amount_cents / 100.0) %> will truly help towards <%= @recipient.first_name.capitalize %>'s goal of getting a <%= @contribution.item.title.capitalize%>.</p>
    </div>
    <div class = "row">
      <h4> Leave a message for <%= @recipient.first_name %></h4>
      <%= simple_form_for @contribution, url: recipient_item_contribution_path, method: :patch do |f|%>
      <%=  f.input :message, label: false%>
      <%= f.submit value: "Confirm", class: "btn message-btn" %> <%=link_to "No Thanks", recipient_path(@recipient), class: "btn message-btn" %>
      <% end %>

    </div>
  </div>
</div>
